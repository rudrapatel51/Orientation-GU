generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
} 

model StudentData {
  uuid          String   @id @default(cuid())
  name          String
  mobileno      String
  enrollment    String   @unique
  email         String   @unique
  institute     String
  status        String   @default("pending") // pending, present
  scanTimestamp DateTime @default(now()) @map("scan_timestamp")
  userScan      String?  @map("user_scan")
  
  
  @@map("student_data")
}


model User {
  id       Int    @id @default(autoincrement())
  name     String @unique
  password String
  username String
  isAdmin  Boolean @default(false)
  
  @@map("users")
}